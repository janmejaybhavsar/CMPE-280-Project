<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>VDO Chat</title>
    <meta name="description" content="Video Chat Application with ChatGPT support.">
    <link rel="stylesheet" href="style.css" />
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://kit.fontawesome.com/c939d0e917.js"></script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
    <script>
      const ROOM_ID = "<%= roomId %>";
    </script>
  </head>
  <body>
    <div class="header">
      <div class="logo">
        <div class="header__back">
          <i class="fas fa-angle-left"></i>
        </div>
        <h3>VDO Chat</h2>
      </div>
    </div>  
    <div class="main">  
    <div class="main__left">
      <div class="videos__group">
        <div id="video-grid">

        </div>
      </div>
      <div class="options">
        <div class="options__left">
          <div id="stopVideo" title="Stop Video" class="options__button">
            <i class="fa fa-video-camera"></i>
          </div>
          <div id="muteButton" title="Mute" class="options__button">
            <i class="fa fa-microphone"></i>
          </div>
          <div id="showChat" title="Show Chat" class="options__button">
            <i class="fas fa-comment"></i>
          </div>
          <div id="screenShare" title="Share Screen" class="options__button">
            <i class="fas fa-desktop"></i>
          </div>
        </div>
        <div class="options__right">
          <div id="inviteButton" title="Generate Invite Link" class="options__button">
            <i class="fas fa-user-plus"></i>
          </div>
          <div id="endButton" title="End Call" class="options__button">
            <i class="fas fa-phone-slash"></i>
          </div>
        </div>
      </div>
    </div>
    <div class="main__right">
      <div class="main__chat_window">
        <div class="header">
          <div class="logo">
            <div class="header__back">
              <i class="fas fa-angle-left"></i>
            </div>
            <h3>Chat Messages</h2>
          </div>
        </div>

          <div id="messages" class="messages">
            <div class="logo">
              <div class="header__back">
                <i class="fas fa-angle-left"></i>
                <div class="header__back__text">Back</div>
              </div>
              <h4>Use @ChatGPT to query the ChatBot</h4>
              <br>
            </div>
          </div>
      </div>
      <div class="main__message_container">
        <input id="chat_message" type="text" autocomplete="off" placeholder="Type message here...">
        <div id="send" title="Send Message" class="options__button">
          <i class="fas fa-paper-plane" aria-hidden="true"></i>
        </div>
      </div>
    </div>
  </div>
  </body>
  <script src="script.js"></script>
</html>
